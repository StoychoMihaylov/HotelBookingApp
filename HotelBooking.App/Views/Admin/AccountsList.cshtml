@using HotelBooking.Models.ViewModels.AdminPanel
@model AccountListPageViewModel

@{
    ViewBag.Title = "AccountsList";
}

<h2>Accounts</h2>

<div style="background-color:rgba(0, 0, 0, 0.8);color:white;margin-top:100px;display:inline-block;padding:30px;">
    <div class="container" style="background-color:rgba(0, 0, 0, 0.8); color:white; text-align:left;">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>E-mail</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Accounts)
                {
                  <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                  </tr>
                }
            </tbody>
        </table>
    </div>
    <ul class="pagination">
        <li class="@(Model.page == 1 ? "disabled" : string.Empty)"><a href="/Admin/AccountsList/@Url.Content((Model.page - 1).ToString())"><span><<</span></a></li>
        <li><span>@Model.page / @Model.pages</span>
        <li>
        <li class="@(Model.page == Model.pages ? "disabled" : string.Empty)"><a href="/Admin/AccountsList/@Url.Content((Model.page + 1).ToString())"><span>>></span></a></li>
    </ul>
</div>
