<!DOCTYPE html>
<html>
<head>
    <title>RichTextEditor - Plain Text Switcher</title>
    <link rel="stylesheet" href="/Content/example.css" type="text/css" />
</head>
<body>
    <h1>
        Plain Text Switcher</h1>
    <p>
        This example demonstrates how to toggle from a plain text field to the Rich Text
        Editor with a simple button click.</p>
    @Html.Raw(ViewBag.Editor)
    <textarea id="textarea1" style="width: 750px; height: 360px;">
	</textarea>
    <hr />
    <button onclick="switchEditor();return false;">
        Switch Editor</button>
    <script type="text/javascript">
        var editorcontainer = document.getElementById('editor');
        editorcontainer.style.display = 'none';
        var textarea1 = document.getElementById('textarea1');
        textarea1.readOnly = true;
        var editor;
        function RichTextEditor_OnLoad(argeditor) {
            editor = argeditor;
            textarea1.readOnly = false;
            textarea1.value = editor.GetText();
        }
        function RichTextEditor_OnTextChanged(editor) {
            textarea1.value = editor.GetText();
        }
        textarea1.onchange = function () {
            editor.SetText(textarea1.value);
        }

        function switchEditor() {
            if (textarea1.style.display == 'none') {
                textarea1.style.display = '';
                editorcontainer.style.display = 'none';
            }
            else {
                textarea1.style.display = 'none';
                editorcontainer.style.display = '';
            }
        }
    </script>
</body>
</html>
