@model rtedemo.Controllers.MyModel
<!DOCTYPE html>
<html>
<head>
	<title>RichTextEditor - Auto adjusting height</title>
	<link rel="stylesheet" href="/Content/example.css" type="text/css" />
</head>
<body>

	@using (Html.BeginForm())
 {
		<h1>Post To Model </h1>
	 
	 if (Context.Request.HttpMethod == "POST")
	 {
		<h3>You posted this value : </h3>
		<div>Title:</div>
		<div>@Model.Title</div>
	 
		<div>Message:</div>
		<div>@Model.Message</div>
	 }
		<p>
			@Html.ValidationSummary("Invalid input.")
		</p>

		<table border="1" cellspacing="0" cellpadding="5" style="border-collapse: collapse;">
			<tr>
				<td></td>
				<td>Form</td>
			</tr>
			<tr>
				<td>Title @Html.ValidationMessageFor(m => m.Title)</td>
				<td>@Html.TextBoxFor(m => m.Title, new { style = "width:500px;" })</td>
			</tr>
			<tr>
				<td>Message @Html.ValidationMessageFor(m => m.Message)</td>
				<td>@Html.Raw(ViewBag.Editor)</td>
			</tr>
			<tr>
				<td>Accept</td>
				<td>@Html.CheckBoxFor(m => m.Accept)
					@Html.LabelFor(m => m.Accept)
					@Html.ValidationMessageFor(m => m.Accept)
				</td>
			</tr>
			<tr>
				<td></td>
				<td>
					<input class="submit" type="submit" value="Submit It" /></td>
			</tr>
		</table>
	 

 }

</body>
</html>
